# Environment Configuration for Safe Travel App Backend

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/safe_travel

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Email Configuration for OTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Settings
FROM_EMAIL=noreply@safetravelapp.com
FROM_NAME=Safe Travel App

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200
AUTH_RATE_LIMIT_MAX=5
OTP_RATE_LIMIT_MAX=10

# Security
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=6

# Production Security Headers
HELMET_ENABLED=true
CORS_ENABLED=true

# Logging
LOG_LEVEL=info
MORGAN_FORMAT=combined

# File Upload
MAX_FILE_SIZE=10mb
UPLOAD_PATH=uploads/

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=*
SOCKET_CORS_METHODS=GET,POST
SOCKET_CORS_CREDENTIALS=true

# Twilio Configuration (Required for SOS Alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here  
TWILIO_PHONE_NUMBER=+1234567890

# Feature Flags
EMAIL_VERIFICATION_ENABLED=true
SMS_VERIFICATION_ENABLED=false
OFFLINE_MODE_ENABLED=true
AUTO_SOS_ENABLED=true